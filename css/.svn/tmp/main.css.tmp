.nav-tabs .dropdown-menu {
    background-color: #2F5B93;
}

. .active a {
    background: #1A4D8B;
    color: #ffffff !important;
}

.dropdown-menu-active {
    background: #1A4D8B;
    border: none;
    border-radius: 0;
    color: #B9EEF4 !important;
}

.clearfix:after {
    content: '';
    display: block;
    clear: both;
}


/*头部信息*/

.main_header {
    background: #2F5B93;
    color: #fff;
    box-sizing: border-box;
    border-bottom: 3px solid #1A4D8B;
}

.header_title,
.icon_flag {
    float: left;
    font-weight: bold;
    font-size: 20px;
    height: 53px;
    line-height: 53px;
}

.icon_flag {
    color: #59C2E6;
    font-size: 30px;
    margin: 0 15px;
}

.header_nav {
    /*float: left;*/
    position: absolute;
    left: 50%;
    top: 0;
    transform: translateX(-50%);
}

.header_nav .nav-tabs {
    border: none;
}

.header_nav .nav-tabs li {
    height: 53px;
    margin: 0;
}

.header_nav .nav-tabs .active a {
    background: #1A4D8B;
    border-radius: 0;
    border: none;
    color: #B9EEF4 !important;
}

.header_nav .nav-tabs li a {
    height: 53px;
    color: #fff;
    box-sizing: border-box;
    padding-top: 0;
    padding-bottom: 0;
    border: none;
    line-height: 53px;
}

.header_nav .nav-tabs li a:hover {
    background: #1A4D8B;
    border: none;
    color: #fff;
    border-radius: 0;
}

.header_nav .nav-tabs li a:focus {
    outline: none;
    outline-offset: 0;
    background: #1A4D8B;
    border: none;
    color: #fff;
}


/*login-info*/

.login_info {
    float: right;
    height: 53px;
    line-height: 53px;
    margin-right: 15px;
}

.login_user {
    margin-right: 15px;
    cursor: pointer;
}

.log_out {
    cursor: pointer;
    color: #fff;
}

.log_out:hover {
    /* color: #2F5B93; */
    color: #fff;
    text-decoration: none;
}


/*内容区信息*/

.main_content {
    border: 10px solid #F5F5F5;
    /*padding: 15px;*/
    box-sizing: border-box;
}

.content {
    height: 100%;
}


/*尾部信息*/

.main_footer {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    background: #2F5B93;
    color: #fff;
    text-align: center;
    padding: 15px 0;
}


/*模态框*/

.modal-dialog {
    width: 100%;
    height: 100%;
    margin: 0;
}

.modal-dialog .modal-content {
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    width: 40%;
    /**background: #333;
    color: #fff;**/
    text-align: center;
    /**border: 1px solid #ddd;**/
}


.modal-dialog .modal-header {
	color: #fff;
    border-bottom: 1px solid #666;
    background: #2F5C95;
}

.modal-dialog .modal-footer {
    border-top: 1px solid #666;
}

/*查找*/


/*search content-header*/

.search_wrap {
    width: 100%;
    background: #333;
    padding: 5px 0;
    position: relative;
}

.search {
    float: right;
    width: 25%;
    margin-right: 30px;
}

.search_icon {
    cursor: pointer;
}


/*日期控件  */

.ta_date {
    float: left;
    margin-left: 160px;
