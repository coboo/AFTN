.message_wrap {
	width: 100%;
	height: 100%;
	padding: 0 10px;
}

.table th , .table td {
	text-align: center;
}
/*table 样式*/
 .table th:first-child,
 .table td:first-child {
    width: 5%;
    position: relative;
    /*background: #fff;*/
}
 .table tr:nth-of-type(odd) td:first-child {
	background: #F9F9F9;
}
 .table th:nth-of-type(2),
 .table td:nth-of-type(2) {
	width: 8%;
}
 .table th:nth-of-type(3),
 .table td:nth-of-type(3) {
	width: 7%;
}
 .table th:nth-of-type(4),
 .table td:nth-of-type(4) {
	width: 19%;
}
 .table th:nth-of-type(5),
 .table td:nth-of-type(5) {
	width: 9%;
}
 .table th:nth-of-type(6),
 .table td:nth-of-type(6) {
	width: 11%;
}
 .table th:nth-of-type(7),
 .table td:nth-of-type(7) {
	width: 11%;
}
 .table th:nth-of-type(8),
 .table td:nth-of-type(8) {
	width: 11%;
}

 .table th:nth-of-type(9),
 .table td:nth-of-type(9) {
	width: 11%;
}
 .table th:nth-of-type(10),
 .table td:nth-of-type(10) {
	width: 8%;
}

@media only screen and (max-width: 1350px) {
	.message_wrap .list_content {
		overflow: auto;
	}
	.message_wrap .table tr {
		white-space: nowrap;
	}
	.message_wrap .list_header .table thead tr>th:first-child{
		background: #F9F9F9 !important;
		position: relative;
		z-index: 1000;
	}
	.message_wrap .list_content .table tr:nth-of-type(odd) td{
		background: #F9F9F9;
	}
	.message_wrap .list_content .table tr:nth-of-type(odd)>td:first-child {
		background: #F9F9F9;
	}
	.message_wrap .list_content .table tr:nth-of-type(even) td{
		background: #fff;
	}
	.message_wrap .list_content .table tr:nth-of-type(even)>td:first-child {
		position: relative;
		z-index: 1000;
		background: #fff;
	}
	 .table th:first-child,
 .table td:first-child {
    width: 50px;
    position: relative;
    /*background: #fff;*/
}
 .table tr:nth-of-type(odd) td:first-child {
	background: #F9F9F9;
}
 .table th:nth-of-type(2),
 .table td:nth-of-type(2) {
	width: 80px;
}
 .table th:nth-of-type(3),
 .table td:nth-of-type(3) {
	width: 80px;
}
 .table th:nth-of-type(4),
 .table td:nth-of-type(4) {
	width: 200px;
}
 .table th:nth-of-type(5),
 .table td:nth-of-type(5) {
	width: 200px;
}
 .table th:nth-of-type(6),
 .table td:nth-of-type(6) {
	width: 120px;
}
 .table th:nth-of-type(7),
 .table td:nth-of-type(7) {
	width: 120px;
}
 .table th:nth-of-type(8),
 .table td:nth-of-type(8) {
	width: 120px;
}

 .table th:nth-of-type(9),
